APP_ENV=local
APP_DEBUG=true
APP_URL=http://nginx
LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=servicedesk
DB_USERNAME=servicedesk
DB_PASSWORD=password

REDIS_HOST=redis
REDIS_PORT=6379
CACHE_DRIVER=redis-fallback
CACHE_REDIS_CONNECTION=cache
CACHE_FALLBACK_STORE=file
SESSION_DRIVER=redis-fallback
SESSION_STORE=redis-fallback
SESSION_CONNECTION=cache

MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=meili_master_key
MEILISEARCH_HEALTHCHECK_URL=http://meilisearch:7700/health
MEILISEARCH_HEALTHCHECK_TIMEOUT=2
MEILISEARCH_BACKUP_PATH=/var/www/html/storage/app/backups/meilisearch
MEILISEARCH_BACKUP_RETENTION_DAYS=14
MEILISEARCH_KB_ARTICLES_INDEX=kb_articles
MEILISEARCH_CORRELATION_PREFIX=meilisearch

QUEUE_CONNECTION=redis
SCOUT_DRIVER=meilisearch
SCOUT_QUEUE=true

# NON-PRODUCTION: Defaults support local docker-compose stack only.
